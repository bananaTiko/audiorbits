{
    "compilerOptions": {
        "outDir": "./dist/tsc",
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "emitDecoratorMetadata": false,
        "sourceMap": false,
        "baseUrl": ".",
        "paths": {
            "three": [
                "node_modules/three/src/Three"
            ]
        },
        "lib": [
            "dom",
            "es2015"
        ],
        "types": [
            "jquery"
        ]
    },
    "include": [
        "./src/**/*.ts",
    ],
    "exclude": [
        "**/wasm/**",
        "**/*.wasm.ts"
    ]
}