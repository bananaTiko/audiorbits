{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": ".",  // This must be specified if "paths" is.
		"outDir": "./dist/tsc",
		"paths": {
			"three.ts/*": ["src/we_utils/src/three.ts/*"],
			"we_utils/*": ["src/we_utils/*"],
		},
		"noEmit": true,
		"sourceMap": true,
		"noImplicitAny": false,
		"module": "ES2020",
		"target": "ES2020",
		"jsx": "react",
		"lib": ["dom", "ES2020", "ES6"],
		"allowJs": true,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		// "strict": true // TOOD later
	},
	"types": ["*.d.ts"],
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules", "**/assembly/**", "src/**/*.spec.ts", "src/we_utils/docs"]
}
